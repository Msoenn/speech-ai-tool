{
  "$schema": "https://raw.githubusercontent.com/nicklasxyz/tauri-v2-schema/refs/heads/main/tauri.conf.json",
  "productName": "Speech AI Tool",
  "version": "0.2.3",
  "identifier": "com.speech-ai-tool.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Speech AI Tool",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "dmg", "nsis"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDczMEU3NTk0NzE2NjU4RjUKUldUMVdHWnhsSFVPY3d0WUlIQmNjM3JYR1VBeVNNWDQ0NXpJcDRidHY1c253VDNuOTV2V1R6YngK",
      "endpoints": [
        "https://github.com/Msoenn/speech-ai-tool/releases/latest/download/latest.json"
      ]
    }
  }
}
